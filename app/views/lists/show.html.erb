<!-- app/views/lists/show.html.erb -->

<h1><%= @list.movie %></h1>

<!-- Display existing bookmarks -->
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.comment %>
      <%= link_to 'Delete', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add Bookmark', new_list_bookmark_path(@list) %>
